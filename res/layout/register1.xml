<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#828482"
         >
    <TextView
        android:id="@+id/shetuan_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="22sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="注册" />
        
    </RelativeLayout>

    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
         >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="用  户  名：" />

		    <EditText
		        android:id="@+id/userName"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:maxLength="15"
		        android:hint="用户名长度6~15位"
		        android:layout_margin="3dp"
		        android:background="@drawable/login_edittext"
		         >
		        <requestFocus />
		    	</EditText>
    </LinearLayout>
    <View
        android:id="@+id/register_view_name"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#828482" >
    </View>
    
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
         >

          <TextView
              android:id="@+id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="密        码：" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="密码长度6~15位"
        android:maxLength="15"
        android:layout_margin="3dp"
        android:background="@drawable/login_edittext"
        android:inputType="textPassword" />
    </LinearLayout>
    <View
        android:id="@+id/register_view_password"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#828482" >
    </View>
    
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
         >

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="确认密码：" />

    <EditText
        android:id="@+id/password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请确认您的密码"
        android:layout_margin="3dp"
        android:maxLength="15"
        android:background="@drawable/login_edittext"
        android:inputType="textPassword" />
	</LinearLayout>
	<View
        android:id="@+id/register_view_repassword"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#828482" >
    </View>
    
    <Button
        android:id="@+id/login_btn"
        style="@style/login_button_style"
        android:onClick="next"
        android:text="下一步" />
    

</LinearLayout>
