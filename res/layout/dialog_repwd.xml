<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
     >
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
         >

         <TextView
             android:id="@+id/textView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="原  密  码：" />

		    <EditText
		        android:id="@+id/dialog_repwd_repwd"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:maxLength="15"
		        android:hint="请填写修改前的密码"
		        android:layout_margin="3dp"
		        android:inputType="textPassword"
		        android:background="@drawable/login_edittext"
		         >
		        <requestFocus />
		    	</EditText>
    </LinearLayout>
    <View
        android:id="@+id/register_view_name"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#828482" >
    </View>
    
     
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
         >

          <TextView
              android:id="@+id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="新  密  码：" />

    <EditText
        android:id="@+id/dialog_repwd_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请填写新密码"
        android:maxLength="15"
        android:layout_margin="3dp"
        android:background="@drawable/login_edittext"
        android:inputType="textPassword" />
    </LinearLayout>
    <View
        android:id="@+id/register_view_password"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#828482" >
    </View>
    
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
         >

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="确认密码：" />

    <EditText
        android:id="@+id/dialog_repwd_confimpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请再次填写您的新密码"
        android:layout_margin="3dp"
        android:maxLength="15"
        android:background="@drawable/login_edittext"
        android:inputType="textPassword" />
	</LinearLayout>
	<View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#828482" >
    </View>

</LinearLayout>
