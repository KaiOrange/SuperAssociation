<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee"
    >
    
	<View  
	    android:layout_width="match_parent"
    	android:layout_height="18dp"/>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="5dp"
	    android:paddingBottom="5dp"
	    android:background="#ffffff"
	    android:id="@+id/tools_userMain"
	     >

		<ImageView
		    android:id="@+id/tools_touxiang"
		    android:layout_width="60dp"
		    android:layout_height="60dp"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:layout_marginLeft="21dp"
		    android:src="@drawable/touxiang_user" />

		<TextView
		    android:id="@+id/tools_nicheng"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_marginLeft="20dp"
		    android:layout_toRightOf="@+id/tools_touxiang"
		    android:textSize="20sp"
		    android:layout_marginTop="5dp"
		    android:text="用户名" />

		<TextView
		    android:id="@+id/tools_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBottom="@+id/tools_touxiang"
		    android:layout_alignLeft="@+id/tools_nicheng"
		    android:layout_marginBottom="5dp"
		    android:text="账号:" />
	</RelativeLayout>
	
	<View  
	    android:layout_width="match_parent"
    	android:layout_height="18dp"/>
		<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="#ffffff"
	    >
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:id="@+id/tools_jiarushetuan"
	     >

		<TextView
		    android:id="@+id/textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:layout_marginTop="8dp"
		    android:layout_marginBottom="7dp"
		    android:layout_marginLeft="20dp"
		    android:text="加入社团" />

	</LinearLayout>
	    <View  
		    android:layout_width="match_parent"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
	    	android:layout_height="1dp"
	    	android:background="#55000000"
	    	/>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     android:id="@+id/tools_tuichushetuan"
	     >

		<TextView
		    android:id="@+id/textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:layout_marginTop="7dp"
		    android:layout_marginBottom="8dp"
		    android:layout_marginLeft="20dp"
		    android:text="退出社团" />
	</LinearLayout>
	</LinearLayout>
	<View  
	    android:layout_width="match_parent"
    	android:layout_height="18dp"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:id="@+id/tools_xiugaimima"
	     >

		<TextView
		    android:id="@+id/textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:layout_marginTop="8dp"
		    android:layout_marginBottom="8dp"
		    android:layout_marginLeft="20dp"
		    android:text="修改密码" />

	</LinearLayout>
	 <View  
		    android:layout_width="match_parent"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
	    	android:layout_height="1dp"
	    	android:background="#55000000"
	    	/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#ffffff"
	    android:id="@+id/tools_myxiakeliao"
	     >

		<TextView
		    android:id="@+id/textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:layout_marginTop="8dp"
		    android:layout_marginBottom="8dp"
		    android:layout_marginLeft="20dp"
		    android:text="我的下课聊" />
	</LinearLayout>
	</LinearLayout>
	<View  
	    android:layout_width="match_parent"
    	android:layout_height="18dp"/>

	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="#ffffff"
	    >
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:id="@+id/tools_guanyu"
	     >

		<TextView
		    android:id="@+id/textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:layout_marginTop="8dp"
		    android:layout_marginBottom="7dp"
		    android:layout_marginLeft="20dp"
		    android:text="关于超级社团" />

	</LinearLayout>
	    <View  
		    android:layout_width="match_parent"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
	    	android:layout_height="1dp"
	    	android:background="#55000000"
	    	/>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	     android:orientation="horizontal"
	     android:id="@+id/tools_zhuxiao"
	     >

		<TextView
		    android:id="@+id/textView3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:layout_marginTop="7dp"
		    android:layout_marginBottom="8dp"
		    android:layout_marginLeft="20dp"
		    android:text="退出" />
	</LinearLayout>
	</LinearLayout>

</LinearLayout>
